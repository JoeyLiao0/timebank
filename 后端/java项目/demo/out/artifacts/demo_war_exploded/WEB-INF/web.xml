<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>Filter1</filter-name>
        <filter-class>tb.servlet.Filter.DomainSetFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Filter1</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Filter2</filter-name>
        <filter-class>tb.servlet.Filter.TokenJudgeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Filter2</filter-name>
        <url-pattern>/CUM/*,/AUM/*,/CSM/*,/common/*,/taskMonitor/select,/adAccount/*,/taskReview/*,/notice/*,/auAccount/*,/csAccount/*,/task/*,/cuAccount/*,/feedback/*,/talk/*,/chat/*</url-pattern>
    </filter-mapping>

</web-app>